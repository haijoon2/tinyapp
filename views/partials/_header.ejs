<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"p
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav d-flex justify-content-between w-100">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <!-- Login Form -->
        <% if (!username) { %>
          <form action="/login" method="POST" class="form-inline ml-auto">
            <div class="form-group">
              <label for="username" class="sr-only">Username:</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="Username">
            </div>
            <button type="submit" class="btn btn-outline-dark ml-2">Login</button>
          </form>
        <% } else { %>
          <div class="d-flex align-items-center">
            Logged in as: <%= username %>!
            <form action="/logout" method="POST" class="form-inline ml-auto">
              <button type="submit" class="btn btn-outline-dark ml-2">Logout</button>
            </form>
          </div>
        <% } %>
        <div class="d-flex align-items-center">
          <form action="/register" method="GET" class="form-inline ml-auto">
            <button type="submit" class="btn btn-outline-dark ml-2">Register</button>
          </form>
        </div>
      </div>
    </div>
  </nav>
</header>